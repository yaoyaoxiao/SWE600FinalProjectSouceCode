@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner1.png" alt="Big Panda Bakery" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                     Innovative Approach  •  Traditional Philosophy 
                    <a class="btn btn-default" asp-controller="Home" asp-action="About">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner2.png" alt="Big Panda Bakery" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                     Bread  •  Coffee & Tea  •  Cake   
                    <a class="btn btn-default" asp-controller="Home" asp-action="Menu">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner3.png" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Everything's Fresh Here at Big Panda Bakery.
                    <a class="btn btn-default" asp-controller="Home" asp-action="Order">
                        Order Now
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner4.png" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    customer satisfaction  •  quality assurance
                    <a class="btn btn-default" asp-controller="Home" asp-action="Contact">
                        Contact Us
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

